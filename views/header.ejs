<header>
  <div class="titlePage"><%= title %></div>
  <div class="imgLogo">
    <picture></picture>
  </div>
  <aside>
    <form id="formFilterPagination" name="formFilterPagination" action="/" method="get">
      <nav>
        <section>
          <h4>Filtros por:</h4>
          <ul class="filters">
            <li>Tag</li>
            <li>Tipo</li>
            <li>Precio</li>
            <li>Nombre</li>
          </ul>
        </section>
        <section>

          <label for="artPerPage"><h4><%= limit %> Elementos por p√°gina</h4></label>
          <ul class="pagination">
            <input type="hidden" name="page" id="page" value=<%= currentPage %>>
              <li><label><%= currentPage %> de <%= totalPages %></label></li>
              <% if (currentPage<=1) { %>  
                <li><button id="prev" type="button" disabled=true onclick=prevPage()>Anterior</button></li>
              <% } else { %>
                <li><button id="prev" type="button" onclick=prevPage()>Anterior</button></li>
              <% } %>

              <% if (currentPage>=totalPages) { %>  
                <li><button id="next" type="button" disabled=true onclick=nextPage()>Siguiente</button></li>
              <% } else { %>
                <li><button id="next" type="button" onclick=nextPage()>Siguiente</button></li>
              <% } %>
          </ul>

        </section>
      </nav>
    </form>
  </aside>
</header>